<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:background="@drawable/bd_bottom">
<!--        Gambar-->
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="140dp">
            <ImageView
                android:id="@+id/gambarKos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/kos"
                android:scaleType="centerCrop"
                />
        </LinearLayout>
<!--        Deskripsi-->
        <LinearLayout
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
<!--            tipe-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:orientation="horizontal"
                android:gravity="fill_horizontal">

                <TextView
                    android:id="@+id/tipeKos"
                    android:layout_width="74dp"
                    android:layout_height="match_parent"
                    android:foreground="@drawable/border_abu"
                    android:gravity="center"
                    android:text="Kost Campur"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/ic_love" />
            </RelativeLayout>
<!--            Nama Kos-->
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/namaKos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Kost Indah Permata Kekalik Jaya"
                    android:textSize="14dp"
                    android:fontFamily="@font/poppinslight"
                    android:textFontWeight="700"/>
            </LinearLayout>
<!--            Lokasi Kos-->
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_location"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/lokasiKos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Mataram"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fasilitasKos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AC • K. Mandi Dalam • Kasur • Lemari • WiFi"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppinsregular"
                    android:layout_weight="700"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Rp1.050.000 / bln"
                    android:fontFamily="@font/poppinbold"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>